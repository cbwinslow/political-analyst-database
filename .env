# Environment Variables for Project Sentinel
# Copy this file to .env and fill in your desired secrets.
# This file should NOT be committed to version control.

# PostgreSQL Configuration
POSTGRES_USER=poladmin
POSTGRES_PASSWORD=please_change_me_to_a_secure_password
POSTGRES_DB=policydocs

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=please_change_me_to_a_secure_password

# MinIO S3 Storage Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=please_change_me_to_a_secure_password

# AI Inference Models
# The model name should match a model file you have downloaded for LocalAI/Ollama
LLM_MODEL_NAME=gpt-4-turbo

# Observability (Optional)
# Used by agents to trace their execution
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
