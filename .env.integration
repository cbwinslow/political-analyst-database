# Integration Configuration for Political Intelligence Platform

# =============================================================================
# MCP Crawl4AI RAG Integration
# =============================================================================

# Enhanced RAG strategies
USE_CONTEXTUAL_EMBEDDINGS=true
USE_HYBRID_SEARCH=true
USE_AGENTIC_RAG=true
USE_RERANKING=true
USE_KNOWLEDGE_GRAPH=true

# Crawl4AI configuration
CRAWL4AI_PARALLEL_WORKERS=10
CRAWL4AI_MAX_DEPTH=3
CRAWL4AI_DELAY=1
CRAWL4AI_USER_AGENT=PoliticalIntelligenceBot/2.0

# MCP Server configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8051
MCP_TRANSPORT=sse

# =============================================================================
# Graphiti Temporal Knowledge Graph Integration
# =============================================================================

# Graphiti configuration
GRAPHITI_URI=bolt://localhost:7687
GRAPHITI_USER=neo4j
GRAPHITI_PASSWORD=please_change_me_to_a_secure_password
GRAPHITI_DATABASE=political_knowledge

# Temporal graph settings
GRAPHITI_ENABLE_TEMPORAL=true
GRAPHITI_SEMAPHORE_LIMIT=10
GRAPHITI_TELEMETRY_ENABLED=false

# LLM configuration for Graphiti
GRAPHITI_LLM_MODEL=gpt-4-turbo
GRAPHITI_SMALL_MODEL=gpt-4o-mini
GRAPHITI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Zep Memory Platform Integration
# =============================================================================

# Zep Cloud configuration
ZEP_API_URL=https://api.getzep.com
ZEP_API_KEY=your_zep_api_key
ZEP_PROJECT_UUID=your_project_uuid

# Memory settings
ZEP_MEMORY_TYPE=perpetual
ZEP_ENABLE_AUTO_SUMMARY=true
ZEP_SESSION_TTL=86400  # 24 hours
ZEP_MAX_MEMORY_LENGTH=10000

# =============================================================================
# LlamaIndex Advanced Document Processing
# =============================================================================

# LlamaIndex configuration
LLAMAINDEX_LLM_MODEL=gpt-4-turbo
LLAMAINDEX_EMBEDDING_MODEL=text-embedding-3-large
LLAMAINDEX_CHUNK_SIZE=1024
LLAMAINDEX_CHUNK_OVERLAP=200

# Document processing settings
LLAMAINDEX_ENABLE_MULTIMODAL=true
LLAMAINDEX_ENABLE_CITATION_TRACKING=true
LLAMAINDEX_MAX_DOCUMENT_SIZE=50000000  # 50MB

# Query engine settings
LLAMAINDEX_RETRIEVER_TOP_K=10
LLAMAINDEX_ENABLE_CROSS_DOCUMENT_ANALYSIS=true

# =============================================================================
# Enhanced Political Analysis Configuration
# =============================================================================

# Political analysis settings
POLITICAL_ENABLE_SENTIMENT_TRACKING=true
POLITICAL_ENABLE_TOPIC_EVOLUTION=true
POLITICAL_ENABLE_RELATIONSHIP_SCORING=true
POLITICAL_TEMPORAL_RESOLUTION=day  # hour, day, week, month

# Social media integration
POLITICAL_TWITTER_ENHANCED_ANALYSIS=true
POLITICAL_SOCIAL_SENTIMENT_TRACKING=true
POLITICAL_INFLUENCE_SCORING=true

# Document collection settings
POLITICAL_CRAWL_CONGRESS_GOV=true
POLITICAL_CRAWL_SENATE_GOV=true
POLITICAL_CRAWL_GOVINFO_GOV=true
POLITICAL_CRAWL_WHITEHOUSE_GOV=true
POLITICAL_ENABLE_BILL_TRACKING=true
POLITICAL_ENABLE_VOTE_ANALYSIS=true

# =============================================================================
# Integration Monitoring and Observability
# =============================================================================

# Enhanced monitoring
MONITORING_ENABLE_INTEGRATION_METRICS=true
MONITORING_GRAPHITI_METRICS=true
MONITORING_ZEP_METRICS=true
MONITORING_LLAMAINDEX_METRICS=true
MONITORING_MCP_METRICS=true

# Performance tracking
PERFORMANCE_LOG_QUERY_TIMES=true
PERFORMANCE_LOG_CRAWL_STATS=true
PERFORMANCE_LOG_MEMORY_USAGE=true

# =============================================================================
# Security and Access Control
# =============================================================================

# API rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
API_RATE_LIMIT_BURST=20

# Data privacy
DATA_ANONYMIZATION_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true

# =============================================================================
# Development and Testing
# =============================================================================

# Development settings
DEV_MODE=false
DEV_ENABLE_DEBUG_LOGGING=false
DEV_SKIP_HEAVY_PROCESSING=false

# Testing configuration
TEST_MODE=false
TEST_USE_MOCK_APIS=false
TEST_ENABLE_PERFORMANCE_TESTS=true

# Feature flags
FEATURE_TEMPORAL_ANALYSIS=true
FEATURE_CONVERSATIONAL_INTERFACE=true
FEATURE_AI_AGENT_INTEGRATION=true
FEATURE_MULTIMODAL_DOCUMENTS=true
FEATURE_REAL_TIME_UPDATES=true