# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/political_analyst_db
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/political_analyst_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Application Configuration
APP_NAME=Political Analyst Database
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=your_secret_key_here

# Crawling Configuration
CRAWL_DELAY=1
MAX_CONCURRENT_REQUESTS=10
USER_AGENT=PoliticalAnalystBot/1.0

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log